<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imageBtn1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#fff"
        android:src="@drawable/leon01"
        >
    </ImageButton >
    <ImageButton
        android:id="@+id/imageBtn2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#fff"
        android:src="@drawable/leon02"
        android:layout_toRightOf="@+id/imageBtn1"
        android:layout_marginLeft="10dp"
        >
    </ImageButton >
    <ImageButton
        android:id="@+id/imageBtn3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#fff"
        android:src="@drawable/mark01"
        android:layout_below="@+id/imageBtn1"
        android:layout_marginTop="10dp"
        >
    </ImageButton >
    <ImageButton
        android:id="@+id/imageBtn4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#fff"
        android:src="@drawable/grace01"
        android:layout_below="@+id/imageBtn2"
        android:layout_toRightOf="@+id/imageBtn3"
        android:layout_marginLeft="10dp"
        >
    </ImageButton >
</RelativeLayout>
